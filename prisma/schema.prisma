generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // Used by app normally
  directUrl = env("DIRECT_URL")  // Used only for migrations
}

model User {
  id            String   @id @default(uuid())
  name          String?
  username      String   @unique
  password      String
  age           Int?
  gender        String? 
  email         String   @unique
  photo         String?  // URL of profile image
  language      String?  // e.g., "English", "Hindi"
  interests     String[] // ["AI", "Marketing", "Design"]
  favouriteTools String[] // ["Figma", "VS Code"]
  personType    String   // "student", "intern", "working_professional", "learner"
  skills        String[] // ["Node.js", "SQL", "Python"]
  madeTillFar   String?  // Achievements, projects, etc.
  promptTagline String?  // e.g., "Ready-made prompts for users to pick up"
  purpose       String?  // Reason for joining, like "networking", "learning"

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt 
}

